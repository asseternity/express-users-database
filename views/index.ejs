<html lang="en">
<head>
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <ul>
        <% if (locals.users) {%>
            <% users.forEach(user => { %>
                <li>
                    ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%= user.email %>, Age: <%= user.age %>, Bio: <%= user.bio %> 
                    <a href="/<%= user.id %>/update ">Update</a>
                    <form method="post" action="/<%= user.id %>/delete" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </li>
            <% }); %>
        <% } %>
    </ul>
    <a href="/create">Create a user</a>
    <br>
    <br>
    <br>
    <br>
    <h1>Find a user</h1>
    <form method="get" action="/search">
        <label for="firstName">First Name: </label>
        <input placeholder="Aigul" type="text" name="firstName" id="firstName" required>
        <label for="lastName">Last Name: </label>
        <input placeholder="Akhmet" type="text" name="lastName" id="lastName" required>
        <button type="submit">Search user</button>
    </form>
</body>
</html>